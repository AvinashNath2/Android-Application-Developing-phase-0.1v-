<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#f1f1f1"
    android:layout_height="fill_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:gravity="center|top"
    android:layout_margin="5dp"
    tools:context="com.example.ronak.gadzt_app_listview.Product_Activity">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:layout_margin="10dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/photo_view_1"
            android:layout_width="600px"
            android:layout_height="400px"
            android:padding="5dp"
            android:src="@drawable/sample1"/>
        <com.github.chrisbanes.photoview.PhotoView
            android:id="@+id/photo_view_2"
            android:layout_width="600px"
            android:layout_height="400px"
            android:padding="5dp"
            android:src="@drawable/sample1"/>
        </LinearLayout>
    </HorizontalScrollView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@color/year"/>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="@color/color1"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:id="@+id/product_title"
        android:textColor="#FFFF"
        android:padding="6dp"
        android:text="Title"/>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:textSize="16dp"
        android:background="@color/color5"
        android:id="@+id/product_gener"
        android:layout_marginLeft="5dp"
        android:textColor="#000"
        android:padding="8dp"
        android:layout_marginBottom="5dp"
        android:text="Product Gener"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/year"/>


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_gravity="left"
        card_view:cardBackgroundColor="@color/color2"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="10dp"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="22dp"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:id="@+id/product_price"
        android:text="Product price"/>
    </android.support.v7.widget.CardView>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="left"
        android:padding="6dp"
        android:id="@+id/product_details"
        android:textSize="16dp"
        android:text="Details "/>

    </LinearLayout>
</RelativeLayout>
</ScrollView>
