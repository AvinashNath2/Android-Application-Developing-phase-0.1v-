<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main__starting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ronak.gadzt_app_listview.MainActivity_Starting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:orientation="vertical"
        >

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:padding="5dp"
          android:elevation="15dp"
          android:background="#E8F5E9"
          android:layout_weight="1">

          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffff">

              <ImageView
                  android:layout_width="40dp"
                  android:layout_height="wrap_content"
                  android:padding="5dp"
                  android:layout_marginLeft="170dp"
                  android:src="@drawable/one"/>

              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/color1"
                  android:textSize="29dp"
                  android:layout_marginTop="36dp"
                  android:layout_marginLeft="20dp"
                  android:textStyle="italic"
                  android:text="Weekly Top"/>


                  <ImageView
                      android:layout_width="40dp"
                      android:layout_height="wrap_content"
                      android:padding="5dp"
                      android:layout_marginLeft="170dp"
                      android:src="@drawable/one"/>

                  <ImageView
                      android:layout_width="50dp"
                      android:layout_height="match_parent"
                      android:layout_marginLeft="200dp"
                      android:layout_marginTop="5dp"
                      android:padding="4dp"
                      android:src="@drawable/zero"/>


              <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/color1"
                  android:textSize="29dp"
                  android:layout_marginTop="110dp"
                  android:layout_marginLeft="210dp"
                  android:textStyle="italic"
                  android:text="Gadgets"/>

          </RelativeLayout>


      </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#E8F5E9"
            android:padding="6dp"
            android:layout_weight="0.8"
            android:layout_gravity="center">



            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:background="#ffff"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/mobile_gadgets"
                        android:padding="3dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp">

                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/ic_settings_cell_black_24dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="3dp"
                        android:text="Mobile Gadgets"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0.2dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"/>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/laptop_gadgets"
                        android:padding="3dp"
                        android:layout_margin="10dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_laptop_chromebook_black_24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Laptop Gadgets"/>

                    </LinearLayout>
                    <View
                        android:layout_width="0.2dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"/>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:id="@+id/tablet_gadgets"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="3dp"
                        android:layout_margin="10dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_tablet_mac_black_24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Tablet Gadgets"/>

                    </LinearLayout>

                    <View
                        android:layout_width="0.2dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"/>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/iot_gadgets"
                        android:padding="3dp"
                        android:layout_margin="10dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_home_black_24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="IOT Gadgets"/>

                    </LinearLayout>
                    <View
                        android:layout_width="0.2dp"
                        android:layout_height="match_parent"
                        android:background="@color/colorPrimaryDark"/>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:id="@+id/other_gadgets"
                        android:padding="3dp"
                        android:layout_margin="10dp">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_settings_input_antenna_black_24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="3dp"
                            android:text="Other Gadgets"/>

                    </LinearLayout>

                </LinearLayout>

             </HorizontalScrollView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/colorPrimaryDark"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:orientation="vertical"
            android:background="#E8F5E9">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gadgets Range"
                android:paddingLeft="9dp"
                android:paddingTop="6dp"
                android:textSize="18dp"
                android:textColor="#000"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Popularity &amp; Ratings"
                android:paddingLeft="9dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="9dp">


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:src="@drawable/ic_laptop_chromebook_black_24dp"/>


                 <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_margin="10dp">

                     <LinearLayout
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:orientation="horizontal">

                         <android.support.v7.widget.CardView
                             android:layout_width="fill_parent"
                             android:layout_height="wrap_content"
                             android:layout_margin="2dp"
                             android:layout_gravity="center"
                             android:elevation="0.5dp"
                             card_view:cardBackgroundColor="@color/color1"
                             card_view:contentPadding="6dp">
                     <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                         android:textColor="#fff"
                        android:text="&lt; 20,000 Rs"/>
                         </android.support.v7.widget.CardView>

                         <android.support.v7.widget.CardView
                             android:layout_width="fill_parent"
                             android:layout_height="wrap_content"
                             android:layout_gravity="center"
                             android:layout_margin="2dp"
                             android:elevation="0.5dp"
                             card_view:cardBackgroundColor="@color/color1"
                             card_view:contentPadding="6dp">
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:padding="3dp"
                                 android:textColor="#fff"
                                 android:text="20 - 30,000 Rs"/>
                         </android.support.v7.widget.CardView>

                         <android.support.v7.widget.CardView
                             android:layout_width="fill_parent"
                             android:layout_height="wrap_content"
                             android:layout_margin="2dp"
                             android:layout_gravity="center"
                             android:elevation="0.5dp"
                             card_view:cardBackgroundColor="@color/color1"
                             card_view:contentPadding="6dp">
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:padding="3dp"
                                 android:textColor="#fff"
                                 android:text=" 30 - 40,000 Rs"/>
                         </android.support.v7.widget.CardView>

                         <android.support.v7.widget.CardView
                             android:layout_width="fill_parent"
                             android:layout_height="wrap_content"
                             android:layout_margin="2dp"
                             android:layout_gravity="center"
                             android:elevation="0.5dp"
                             card_view:cardBackgroundColor="@color/color1"
                             card_view:contentPadding="6dp">
                             <TextView
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:padding="3dp"
                                 android:textColor="#fff"
                                 android:text=" 40 - 50,000 Rs"/>
                         </android.support.v7.widget.CardView>


                     </LinearLayout>
                 </HorizontalScrollView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="9dp"
                android:paddingRight="9dp">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/ic_tablet_mac_black_24dp"/>


                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none"
                    android:layout_margin="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_gravity="center"
                            android:elevation="0.5dp"
                            card_view:cardBackgroundColor="@color/color1"
                            card_view:contentPadding="6dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:textColor="#fff"
                                android:text="&lt; 5,000 Rs"/>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="2dp"
                            android:elevation="0.5dp"
                            card_view:cardBackgroundColor="@color/color1"
                            card_view:contentPadding="6dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:textColor="#fff"
                                android:text=" 10,000 Rs"/>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_gravity="center"
                            android:elevation="0.5dp"
                            card_view:cardBackgroundColor="@color/color1"
                            card_view:contentPadding="6dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:textColor="#fff"
                                android:text=" 15,000 Rs"/>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="2dp"
                            android:layout_gravity="center"
                            android:elevation="0.5dp"
                            card_view:cardBackgroundColor="@color/color1"
                            card_view:contentPadding="6dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="3dp"
                                android:textColor="#fff"
                                android:text=" 20,000 Rs"/>
                        </android.support.v7.widget.CardView>


                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
